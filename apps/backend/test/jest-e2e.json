{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/../tsconfig.spec.json"
      }
    ]
  },
  "moduleNameMapper": {
    "^@shared/(.*)$": "<rootDir>/../../packages/shared/src/$1"
  }
}
